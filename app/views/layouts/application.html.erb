<!DOCTYPE html>
<html>
<head>
  <title>SeatYoSelf</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p><%= link_to "new reservation", new_reservation_path %></p>
<p><%= link_to "reservation index", reservations_path %></p>
<div class ="flash" >
	<% if flash[:notice] %>
		<p id ="notice"><%= flash[:notice] %></p>
	<% end %>

	<% if flash[:alert] %>
		<p id ="alert"> <%= flash[:alert] %></p>
	<% end %>
</div>

<%= yield %>

</body>
</html>
